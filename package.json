{
  "name": "nuxt-webpack-optimisations-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn run prepack --stub",
    "prepack": "cp README.md packages/nuxt-webpack-optimisations && cd packages/nuxt-webpack-optimisations && yarn prepack",
    "changelog": "npx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs",
    "lint": "eslint --fix --ext .ts,.js,.vue .",
    "release": "cd packages/nuxt-webpack-optimisations && npm run release",
    "release:beta": "dotenv release-it --preReleaseId=beta --npm.tag=beta --github.preRelease",
    "test": "yarn run prepack && jest --verbose --maxWorkers=4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.14.0",
    "@nuxt/test-utils": "^0.2.2",
    "@nuxt/types": "^2.15.8",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/visitor-keys": "^5.8.0",
    "cheerio": "^1.0.0-rc.10",
    "dotenv-cli": "^4.1.1",
    "esbuild": "^0.14.7",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.5.0",
    "eslint-plugin-jest": "^25.3.0",
    "jest": "^27.3.0"
  },
  "dependencies": {
    "webpack": "^4"
  }
}
